---
import BaseLayout from "../../layouts/BaseLayout.astro";
const pageTitle = "Tag's page";
const pageH2 = "Look at this tags!"
const allPosts = await Astro.glob('../posts/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<BaseLayout pageH2={pageH2} pageTitle={pageTitle}>
    <p class="my-6">All the subjects in this blog</p>
    <div class="flex flex-wrap">{tags.map((tag)=><p class="m-1 border-[#a1a1a1] rounded-lg py-2 px-4 text-lg bg-gray-500"><a href={`/tags/${tag}`}>{tag}</a></p>)}</div>    
</BaseLayout>